<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialog_color_pciker_view_portrait">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:layout_width">@dimen/common_txt_width</item>
        <item name="android:layout_height">@dimen/common_txt_height</item>
        <item name="android:textSize">@dimen/common_font_small_size</item>
        <item name="android:paddingLeft">@dimen/common_input_padding</item>
        <item name="android:paddingRight">@dimen/common_input_padding</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>