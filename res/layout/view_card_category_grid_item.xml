<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/glb_card_category_grid_item_iv_image"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:scaleType="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/glb_card_category_grid_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/glb_card_category_grid_item_iv_image"
        android:layout_centerHorizontal="true"
        android:background="@drawable/category_name"
        android:gravity="center"
        android:textColor="@color/dark_wooden" />

</RelativeLayout>