<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/act_card_sender_rlyt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg1" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/title_send_card" />

        <ImageView
            android:id="@+id/act_card_sender_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/icon_ar1_left" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/act_card_sender_iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_card_sender_rlyt_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/handwrite_03" />

    <View
        android:id="@+id/act_card_sender_v_right_block"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/act_card_sender_iv_tip" />

    <FrameLayout
        android:id="@+id/act_card_sender_flyt_card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_card_sender_iv_tip"
        android:layout_marginTop="-100dip"
        android:layout_toLeftOf="@id/act_card_sender_v_right_block"
        android:paddingTop="10dip" >

        <include layout="@layout/view_card_animation" />

        <HorizontalScrollView
            android:id="@+id/act_card_sender_hsv_card_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/act_card_sender_rlyt_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/act_card_sender_iv_card_inner_page"
                    android:layout_width="@dimen/card_open_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:scaleType="fitXY" >
                </ImageView>

                <FrameLayout
                    android:id="@+id/act_card_sender_flyt_editables"
                    android:layout_width="@dimen/card_open_width"
                    android:layout_height="@dimen/card_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip" >

                    <include layout="@layout/view_card" />
                </FrameLayout>
            </RelativeLayout>
        </HorizontalScrollView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/act_card_sender_llyt_sender_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/act_card_sender_iv_send_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:src="@drawable/btn_send_fb_selector" />

        <ImageView
            android:id="@+id/act_card_sender_iv_send_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_send_contact_selector" />
    </LinearLayout>

</RelativeLayout>