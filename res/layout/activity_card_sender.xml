<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/act_card_sender_rlyt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg1" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/title_send_card" />

        <ImageView
            android:id="@+id/act_card_sender_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/icon_ar1_left" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/act_card_sender_iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_card_sender_rlyt_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/handwrite_03" />

    <FrameLayout
        android:id="@+id/act_card_sender_flyt_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/act_card_sender_iv_receiver_chooser"
        android:layout_below="@id/act_card_sender_iv_tip"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/act_card_sender_iv_receiver_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/notebook" />

    <LinearLayout
        android:id="@+id/act_card_sender_iv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/envelope"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/act_card_sender_iv_send_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/handwrite_04"
            android:translationX="30dip" />

        <TextView
            android:id="@+id/act_card_sender_tv_receiver_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="35dip"
            android:rotation="-10"
            android:text="(5äºº)"
            android:textColor="@color/mail_sender_receiver_counter" />
    </LinearLayout>

</RelativeLayout>