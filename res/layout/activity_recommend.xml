<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/act_recommend_llyt_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@layout/view_main_backgroud_repeat"
		android:orientation="vertical"
		android:clipToPadding="false">
		<LinearLayout
				android:id="@+id/act_recommend_llyt_header"
				android:layout_width="match_parent"
				android:layout_height="94dp"

				android:layout_gravity="center"
				android:background="@drawable/header_bg1"
				android:gravity="center"
				android:orientation="vertical"
				android:clipToPadding="false">
				<ImageView
						android:id="@+id/act_recommend_iv_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/title_recommend" />
		</LinearLayout>

		<RelativeLayout
				android:id="@+id/act_recommend_rlyt_middle"
				android:layout_width="match_parent"
				android:layout_height="428dp"
				android:clipChildren="false"
				android:clipToPadding="false">
				<ListView
						android:id="@+id/act_recommend_lv_main"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true"></ListView>
		</RelativeLayout>
		<LinearLayout
				android:id="@+id/act_recommend_llyt_menu"
				android:layout_width="match_parent"
				android:layout_height="99dp"
				android:background="@drawable/menu_bg"
				android:gravity="center"
				android:orientation="horizontal">
				<LinearLayout
						android:id="@+id/act_recommend_llyt_submenu"
						android:layout_width="fill_parent"
						android:layout_height="35dp"
						android:layout_gravity="bottom|center_horizontal"
						android:layout_marginBottom="15dp"
						android:gravity="center_horizontal"
						android:orientation="horizontal">
						<ImageView
								android:id="@+id/act_recommend_iv_main_menu"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:src="@drawable/menu_index" />
						<ImageView
								android:id="@+id/act_recommend_iv_main_separation_line"
								android:layout_width="2dp"
								android:layout_height="35dp"
								android:layout_marginLeft="20dp"
								android:layout_marginRight="20dp"
								android:background="@color/white"
								android:src="@color/antiquewhite" />
						<ImageView
								android:id="@+id/act_recommend_iv_main_more"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:src="@drawable/menu_more" />
				</LinearLayout>
		</LinearLayout>

</LinearLayout>
