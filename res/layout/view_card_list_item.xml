<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/glb_card_list_item_llyt_wrapper"
        android:layout_width="@dimen/card_list_item_wrapper_width"
        android:layout_height="@dimen/card_list_item_wrapper_height"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/glb_card_list_item_iv_image"
            android:layout_width="@dimen/card_list_item_card_width"
            android:layout_height="@dimen/card_list_item_card_height"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>