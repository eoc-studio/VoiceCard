<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/glb_memorial_day_notification_llyt_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/index_calendar" />

        <ImageView
            android:id="@+id/glb_memorial_day_notification_iv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/golden_month"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glb_memorial_day_notification_iv_month"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/glb_memorial_day_notification_iv_date_digit_in_tens_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/golden_digit"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/glb_memorial_day_notification_iv_date_digit_in_ones_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/golden_digit"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/glb_memorial_day_notification_tv_normal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glb_memorial_day_notification_llyt_calendar"
        android:layout_centerHorizontal="true"
        android:text="@string/a_normal_day"
        android:textColor="@color/white"
        android:textSize="12dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/glb_memorial_day_notification_tv_special_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/glb_memorial_day_notification_llyt_calendar"
        android:layout_below="@id/glb_memorial_day_notification_llyt_calendar"
        android:textColor="@color/dark_wooden"
        android:visibility="invisible"
        android:textSize="12dip" />

</RelativeLayout>