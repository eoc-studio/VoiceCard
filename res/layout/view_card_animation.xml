<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/glb_card_animation_hsv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="@dimen/card_animation_wrapper_width"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/glb_card_animation_iv_card_open_shadow"
            android:layout_width="@dimen/card_open_shadow_width"
            android:layout_height="@dimen/card_open_shadow_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shadow_open"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/glb_card_animation_flyt_card_flipview_wrapper"
            android:layout_width="@dimen/card_open_shadow_width"
            android:layout_height="match_parent"
            android:translationX="-8dip"
            android:translationY="-28dip">
        </FrameLayout>
    </RelativeLayout>

</HorizontalScrollView>