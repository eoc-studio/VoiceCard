<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg1" >

        <Button
            android:id="@+id/backBtnViewOfMagazine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8.0dp"
            android:layout_marginTop="14.0dp"
            android:background="@drawable/icon_ar1_left" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30.0dp"
            android:src="@drawable/title_edit_news2" />

        <Button
            android:id="@+id/nextBtnViewOfMagazine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/backBtnViewOfMagazine"
            android:layout_alignBottom="@+id/backBtnViewOfMagazine"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8.0dp"
            android:background="@drawable/icon_ar1_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newspaperLayoutOfMagazine"
        android:layout_width="251.0dp"
        android:layout_height="343.0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mag_shadow" >

        <ImageView
            android:id="@+id/imageMainPhotoViewOfMagazine"
            android:layout_width="238.0dp"
            android:layout_height="323.0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8.0dp"
            android:layout_marginTop="10.0dp"
            android:background="@drawable/mag_header" />

        <RelativeLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="55.0dp"
            android:layout_height="160.0dp"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11.0dp" >

            <TextView
                android:id="@+id/titleTextViewOfMagazine"
                android:layout_width="20.0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/newspaper_edit_title_string"
                android:textColor="#ff62442a"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/imageTitleViewOfMagazine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/mag_frame1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/magazineSetBackgroundView"
            android:layout_width="143.0dp"
            android:layout_height="160.0dp"
            android:layout_alignRight="@+id/relativeLayout2"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dp"
            android:background="@drawable/mag_frame2" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/magazine_edit_background_string"
                android:textColor="#ff8b7768"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout4"
            android:layout_alignTop="@+id/relativeLayout4"
            android:layout_marginLeft="1.0dp"
            android:background="@drawable/mag_footer" />

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="80.0dp"
            android:layout_height="64.0dp"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dp"
            android:layout_marginLeft="1.0dp"
            android:background="#ffff0000" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/newspaper_edit_photo_and_text_string"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/magazineSetLeftBottomPhotoView"
                android:layout_width="74.0dp"
                android:layout_height="58.0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mag_frame3" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>