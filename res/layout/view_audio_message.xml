<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_message_controller_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/glb_audio_message_iv_control_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:src="@drawable/icon_play" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_voice_message"
        android:textSize="@dimen/glb_card_tv_editable_voice_tip_textsize"
        android:textColor="@color/white" />
    
    <TextView
        android:id="@+id/glb_audio_message_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="10dip"
        android:textSize="@dimen/glb_card_tv_editable_voice_tip_textsize"
        android:textColor="@color/white" />

</LinearLayout>